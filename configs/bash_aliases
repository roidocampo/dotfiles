    alias which='alias | \which --tty-only --read-alias --show-dot --show-tilde'
fi

###########################################################################
# print path in a sane way
###########################################################################

function path() {(
    if [ -z "$1" ]; then
        P=$PATH
    else
        P=$1
    fi
    IFS=:
    printf "%s\n" $P
)}

