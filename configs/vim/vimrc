"             \ if exists('b:NERDTree')
"                 \ | let s:just_left_nt = 1
"             \ | endif
" autocmd BufEnter *
"             \ if s:just_left_nt == 1
"                     \ && !getbufinfo('%')[0].changed
"                     \ && tabpagenr('$') == 1 && winnr('$') == 1
"                     \ && line('$') == 1 && getline(1) == ''
"                 \ | quit
"             \ | endif
"             \ | let s:just_left_nt = 0

autocmd FileType nerdtree setlocal fillchars=vert:â”‚,fold:\ ,eob:\ 
