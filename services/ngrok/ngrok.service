[Unit]
Description=ngrok
After=network.target

[Service]
ExecStart=%h/.dotfiles/services/ngrok/ngrok start --all --config %h/.dotfiles/services/ngrok/ngrok.yml
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
IgnoreSIGPIPE=true
Restart=always
RestartSec=3
Type=simple

[Install]
WantedBy=multi-user.target
